package com.CognitiveBox {	import flash.display.MovieClip;	import flash.display.Graphics;	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.AntiAliasType;	import flash.text.TextFormat;	import flash.text.StyleSheet;		public class CognitiveBox extends MovieClip{				public var contentBox:Sprite;		private var timeBox:Sprite;		private var cogBox:MovieClip;		private var bTimeText:TextField;		private var bTitleText:TextField;		private var bContentText:TextField;		private var bTimeFormat:TextFormat;		private var bTitleFormat:TextFormat;		private var bContentFormat:StyleSheet;		private var boxType:String;		private var borderColor:uint;		private var timeBoxColor:uint;		private var boxIndex:int;		public function CognitiveBox(type:String) {			this.boxType = type;			init();		}				private function init():void {			if (boxType == "l" || boxType =="topic") {				borderColor = 0x4835D8;				timeBoxColor = 0x423989;			} else if (boxType == "m" || boxType == "sub") {				borderColor = 0x54A3DA;				timeBoxColor = 0x49708B;			} else if (boxType == "s" || boxType == "subsub") {				borderColor = 0x55D2D8;				timeBoxColor = 0x4A888B;			} else {				borderColor = 0x4835D8;			}			createBox();		}				private function createBox():void {			cogBox = new MovieClip();						contentBox = new Sprite();			contentBox.graphics.lineStyle(4,borderColor,1);			contentBox.graphics.beginFill(0x333333,1);			contentBox.graphics.drawRoundRect(0,0,150,150,10,10);			contentBox.graphics.endFill();			cogBox.addChild(contentBox);						timeBox = new Sprite();			timeBox.graphics.beginFill(timeBoxColor,1);			timeBox.graphics.drawRoundRect(0,0,55,20,18,18);			timeBox.graphics.endFill();			timeBox.mouseChildren = false;			cogBox.addChild(timeBox);						timeBox.x = 47.5;			timeBox.y = 0;			contentBox.x = 0;			contentBox.y = 10;						cogBox.buttonMode = true;			addChild(cogBox);		}				public function insertContent(bTime:String,bTitle:String,bContent:String):void {			bTimeText = new TextField();			bTitleText = new TextField();			bContentText = new TextField();						setFormat();						bTimeText.text = bTime;			timeBox.addChild(bTimeText);						bTitleText.text = bTitle;			contentBox.addChild(bTitleText);						bContentText.htmlText = '<body>' + bContent + '</body>';			contentBox.addChild(bContentText);		}				public function setIndex(i:int):void {			boxIndex = i;		}				public function getIndex():int {			return boxIndex;		}				private function setFormat():void {			bTimeFormat = new TextFormat();			bTimeFormat.align = "center";			bTimeFormat.color = 0xFFFFFF;			bTimeFormat.size = 12;			bTimeFormat.font = "Arial, sans-serif";			bTimeText.defaultTextFormat = bTimeFormat;			bTimeText.multiline = false;			bTimeText.wordWrap = false;			bTimeText.condenseWhite = true;			bTimeText.selectable = false;			bTimeText.antiAliasType = AntiAliasType.ADVANCED;			bTimeText.maxChars = 8;			bTimeText.width = 55;			bTimeText.height = 15;			bTimeText.x = 0;			bTimeText.y = 2.2;						bTitleFormat = new TextFormat();			bTitleFormat.align = "left";			bTitleFormat.color = 0xFFFFFF;			bTitleFormat.size = 16;			bTitleFormat.font = "Arial, sans-serif";			bTitleFormat.bold = true;			bTitleText.defaultTextFormat = bTitleFormat;			bTitleText.multiline = false;			bTitleText.wordWrap = true;			bTitleText.condenseWhite = true;			bTitleText.selectable = false;			bTitleText.mouseEnabled = false;			bTitleText.antiAliasType = AntiAliasType.ADVANCED;			bTitleText.width = 145;			bTitleText.height = 25;			bTitleText.x = 2.5;			bTitleText.y = 10;						bContentFormat = new StyleSheet();			bContentFormat.setStyle("body", {fontFamily:"Arial, sans-serif", color:"#FFFFFF", fontSize:14, textAlign:"left"});			bContentFormat.setStyle("a", {color:"#54A3DA", display:"inline"});			bContentFormat.setStyle("a:hover", {textDecoration:"underline"});			bContentFormat.setStyle("strong", {fontWeight:"bold", display:"inline"});			bContentFormat.setStyle("ins", {textDecoration:"underline", display:"inline"});			bContentFormat.setStyle("em", {fontStyle:"italic", display:"inline"});			bContentText.styleSheet = bContentFormat;			bContentText.autoSize = TextFieldAutoSize.LEFT;			bContentText.multiline = true;			bContentText.wordWrap = true;			bContentText.condenseWhite = true;			bContentText.selectable = true;			bContentText.antiAliasType = AntiAliasType.ADVANCED;			bContentText.width = 145;			bContentText.x = 2.5;			bContentText.y = 28;		}	}	}