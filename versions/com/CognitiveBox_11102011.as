package com.CognitiveBox {	import flash.display.MovieClip;	import flash.display.Graphics;	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.text.StyleSheet;		public class CognitiveBox extends MovieClip{				public var contentBox:Sprite;		private var line:Sprite;		private var cogBox:MovieClip;		private var bTitleText:TextField;		private var bTitleFormat:TextFormat;		private var boxType:String;		private var boxEnd:String;		private var boxHeight:int;		private var boxY:int;		private var boxIndex:int;		public function CognitiveBox(type:String, end:String) {			this.boxType = type;			this.boxEnd = end;			init();		}				private function init():void {			if (boxType == "m" || boxType =="main") {				boxHeight = 150;				boxY = 0;			} else if (boxType == "s" || boxType == "sub") {				boxHeight = 125;				boxY = 25;			} else if (boxType == "ss" || boxType == "subsub") {				boxHeight = 100;				boxY = 50;			} else {				boxHeight = 150;				boxY = 0;			}			createBox(boxType,boxEnd);		}				private function createBox(type:String,end:String):void {			cogBox = new MovieClip();			if (type == "m" || type == "main") {				contentBox = new Sprite();				contentBox.graphics.lineStyle(3,0x54A3DA,1);				contentBox.graphics.beginFill(0x333333,1);				contentBox.graphics.drawRoundRect(0,boxY,150,boxHeight,8,8);				contentBox.graphics.endFill();				cogBox.addChild(contentBox);			} else {				contentBox = new Sprite();				contentBox.graphics.lineStyle(3,0x54A3DA,1);				contentBox.graphics.beginFill(0x333333,1);				contentBox.graphics.drawRoundRect(0,boxY,150,boxHeight,8,8);				contentBox.graphics.endFill();				line = new Sprite();				line.graphics.lineStyle(3,0x49708B,1);				if (type == "ss" || type == "subsub") {					line.graphics.moveTo(-9,36);					line.graphics.lineTo(74,36);					line.graphics.lineTo(74,boxY-3);					if (end == "n") {						line.graphics.lineTo(74,36);						line.graphics.lineTo(149,36);					}				} else {					line.graphics.moveTo(-9,12);					line.graphics.lineTo(74,12);					line.graphics.lineTo(74,boxY-3);					if (end == "n") {						line.graphics.lineTo(74,12);						line.graphics.lineTo(149,12);					}				}								cogBox.addChild(line);				cogBox.addChild(contentBox);			}			cogBox.buttonMode = true;			addChild(cogBox);		}				public function insertContent(bTitle:String):void {			bTitleText = new TextField();						setFormat();									bTitleText.text = bTitle;			contentBox.addChild(bTitleText);		}					public function setIndex(i:int):void {			boxIndex = i;		}				public function getIndex():int {			return boxIndex;		}				private function setFormat():void {						bTitleFormat = new TextFormat();			bTitleFormat.align = "left";			bTitleFormat.color = 0xFFFFFF;			bTitleFormat.size = 16;			bTitleFormat.font = "Arial, Helvetica, sans-serif";			bTitleFormat.bold = true;			bTitleText.defaultTextFormat = bTitleFormat;			bTitleText.multiline = true;			bTitleText.wordWrap = true;			bTitleText.condenseWhite = true;			bTitleText.selectable = false;			bTitleText.mouseEnabled = false;			bTitleText.width = 140;			bTitleText.y = boxY + 5;			bTitleText.x = 5;					}	}	}